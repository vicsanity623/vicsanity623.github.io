rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Rules for Survive It? (New) ---
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- MAIN MULTIPLAYER SESSION RULES ---
    match /multiplayer_sessions/{sessionId} {
      allow list, get: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.hostUid == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.hostUid == request.auth.uid;
    }

    // --- INPUTS SUB-COLLECTION RULES (THIS IS THE FIX) ---
    match /multiplayer_sessions/{sessionId}/inputs/{playerId} {
      // The HOST of this session is allowed to READ all input documents.
      allow read: if request.auth != null && get(/databases/$(database)/documents/multiplayer_sessions/$(sessionId)).data.hostUid == request.auth.uid;

      // A CLIENT can only WRITE to their own input document.
      allow write: if request.auth != null && request.auth.uid == playerId;
    }


    // --- Rules for your other game (Tap Guardian RPG) ---
    match /playerSaves/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    match /gameConfig/{configDoc} {
      allow read: if true;
      allow write: if false;
    }
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /damageLeaderboard/{entry} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /pvpLeaderboard/{entry} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /admin/{doc} {
       allow read, write: if false;
    }
  }
}